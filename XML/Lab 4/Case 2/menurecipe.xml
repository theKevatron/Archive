<?xml-stylesheet type="text/css" href="menu.css" ?>
<?xml-stylesheet type="text/css" href="recipe.css" ?>

<mnu:menuItem xmlns:xs="http://www.w3.org/2001/XMLSchema-instance"
		  xs:schemaLocation="http://example.com/chestershartland/menu menu.xsd"
		  xmlns:mnu="http://example.com/chestershartland/menu"
		  xmlns:rcp="http://example.com/chestershartland/recipe">
   <mnu:itemName>Oatmeal Breakfast</mnu:itemName>
   <mnu:description>
   <![CDATA[Our oatmeal is served warm with fresh fruit, pecans, raisins,
	  and 100% maple syrup. Avaliable all day.
   ]]>
   </mnu:description>
   <mnu:price>6.95</mnu:price>
   <mnu:icon>&#9824;</mnu:icon>
   <mnu:icon>&#9829;</mnu:icon>
   <rcp:recipe xmlns="http://example.com/chestershartland/recipe">
      <rcp:itemName>Oatmeal Breakfast</rcp:itemName>
      <rcp:ingredients>
         <rcp:ingredient>1/3 c steel cut oats</rcp:ingredient>
         <rcp:ingredient>1-1/4 c water</rcp:ingredient>
         <rcp:ingredient>1/4 t salt</rcp:ingredient>
      </rcp:ingredients>
      <rcp:directions>
      <![CDATA[Bring water to a boil. Add salt and oats, stir, and lower heat
         to lowest setting. Cover and let stand 2 hours.
      ]]>
      </rcp:directions>
   </rcp:recipe>
</mnu:menuItem>